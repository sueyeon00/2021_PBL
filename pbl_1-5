#include<stdio.h>
#include<stdlib.h>

#define MAX_STACK_SIZE 100000    //스택의 최대 크기
typedef int element;          //데이터의 자료형  --> int를 element라는 이름으로 바꿈
element stack[MAX_STACK_SIZE];  //1차원 배열   --> stack
int top = -1;       //-1로 초기화시킴

//공백 상태 검출 함수
int is_empty()
{
	return (top == -1);
}
//포화 상태 검출 
int is_full()
{
	return(top == (MAX_STACK_SIZE - 1));
}
//삽입 함수
void push(element item)
{
	if (is_full()) {
		fprintf(stderr, "스택 포화 에러\n");   //prinf와 유사
		return;
	}
	else stack[++top] = item;    //top + 1
}
//삭제 함수
element pop()
{
	if (is_empty()) {
		fprintf(stderr, "스택 공백 에러\n");
		exit(1);   //오류 났으니 종료하라 (return 해줘도 됨)
	}
	else return stack[top--];      //top - 1
}

int main(void) {
	int k;
	int j;
	int sum = 0;
	printf("k의 값:");
	scanf_s("%d", &k);     //k값 = 줄 수 
	for (int i = 0; i < k; i++) { //k만큼 반복
		scanf_s("%d", &j);     //입력받음
		if ( j != 0) {         //값이 0이 아니면 
			push(j);           //그 값을 push
		}
		else {                 //0이면
			pop();             //pop
		}
	}
	for (int i = 0; i <= top; i++) {  //스택 안에 들어있는 값 모두
		sum += stack[i];              //다 더함
	}
	printf("총합:");
	printf("%d\n", sum);
	return 0;
}
